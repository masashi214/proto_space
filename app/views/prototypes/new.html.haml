= form_for(@prototype, url: '/prototypes', action: 'post', html: {class: "container proto-new"}) do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        = f.text_field :title, placeholder: "Title"
    .row
      .col-md-12
        .cover-image-upload
          = f.fields_for :pictures do |picture|
            = picture.file_field :file
      .col-md-12
        %ul.proto-sub-list.list-group
          %li.list-group-item.col-md-4
            .image-upload
              = f.fields_for :pictures do |picture|
                = picture.file_field :file
          %li.list-group-item.col-md-4
            .image-upload
              = f.fields_for :pictures do |picture|
                = picture.file_field :file
          %li.list-group-item.col-md-4
            .image-upload-plus
              %span +
    .row.proto-description
      .col-md-12
        = f.text_field :catch_copy, placeholder: "Catch Copy"
      .col-md-12
        %textarea{:name => "", :cols => "30", :rows => "4", :placeholder => "Concept"}
      .col-md-12
        %h4 Tag List
        .row
          .col-md-3
            = text_field_tag 'prototype[tag_list][]', nil, placeholder: "Web Design"
          .col-md-3
            = text_field_tag 'prototype[tag_list][]', nil, placeholder: "Web Design"
          .col-md-3
            = text_field_tag 'prototype[tag_list][]', nil, placeholder: "Web Design"
    .row.text-center.proto-btn
      %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"} Publish
